<!-- insert_bottom '#order-summary' -->

<tbody class="gift-code-field">
  <tr>
    <td colspan="6">
      <%= form_for @order, :url => update_cart_path, :html => {:id => 'update-cart'} do |order_form| %>
        <%= order_form.label :gift_code %>
        <%= order_form.text_field :gift_code, :size => 10 %>
        <%= order_form.submit I18n.t(:apply) %>
      <% end
    </td>
  </tr>
</tbody>
